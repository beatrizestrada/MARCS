#!/bin/csh
#makeinput
#/dev/shm/uffegj

#KOPIER MARCS TIL $TMPDIR
# cp ..... $TMPDIR/
# cd $TMPDIR
# ...koer marcs...
# mv mxmodel.dat $CWD/...
# cd $CWD
# rm -rf $TMPDIR 
#
#

setenv CWD `pwd`
setenv TMPDIR `mktemp -p /dev/shm/ -u`
mkdir $TMPDIR
cp -r ./* $TMPDIR/.
cd $TMPDIR 


#***************************
cp mxms7a.input  mxms7.input
cp models/t25g45K3339pe2mol52.arciv arcivaaa.dat
./marcs_test7

mv mxmodel.dat     	$CWD/models/irrad_test.dat 
mv arcivaab.dat    	$CWD/models/irrad_test.arciv
#***************************

mv GGchem_ppel     	$CWD/GGchem_ppel
mv mxms7.output    	$CWD/mxms7.output
mv MOL2.dat        	$CWD/MOL2.dat
mv pp.dat        	$CWD/pp.dat
mv wlos.dat        	$CWD/wlos.dat
mv ndensity.dat     $CWD/ndensity.dat

rm spectrum.dat
rm fort.*

rm -rf $TMPDIR
